generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Action {
  id   String @id
  name String @unique
}

model Customer {
  id            String          @id
  name          String
  email         String          @unique
  phone         String
  address       String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  EntityHistory EntityHistory[]
  Invoice       Invoice[]
  Note          Note[]
  Subscription  Subscription[]
}

model Demo {
  id          String   @id
  title       String
  description String?
  coverImage  String?
  videos      Json?
  priority    Int?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model Form {
  id                      String         @id
  name                    String
  description             String?
  fields                  Json
  stageId                 String?
  published               Boolean        @default(false)
  createdAt               DateTime       @default(now())
  updatedAt               DateTime
  bannerImage             String?
  Stage                   Stage?         @relation(fields: [stageId], references: [id])
  FormResponse            FormResponse[]
}

model FormResponse {
  id        String   @id
  formId    String
  leadId    String?
  response  Json
  createdAt DateTime @default(now())
  Form      Form     @relation(fields: [formId], references: [id])
  Lead      Lead?    @relation(fields: [leadId], references: [id])
}

model Invoice {
  id             String        @id
  invoiceNumber  String        @unique
  amount         Float
  status         String
  dueDate        DateTime
  customerId     String
  subscriptionId String?
  lineItems      Json          @default("[]")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime
  Customer       Customer      @relation(fields: [customerId], references: [id])
  Subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
}

model Lead {
  id                    String                  @id
  schoolName            String?
  name                  String
  phone                 String
  email                 String
  address               String?
  assignedTo            String?
  stageId               String?
  createdAt             DateTime                @default(now())
  updatedAt             DateTime
  lastActiveDate        DateTime?               // Track when an agent last interacted with this lead
  lastDisposition       String?                 // Track the last disposition set for this lead
  demoCode              String?                 @unique
  demoLog               Json?
  howHeard              String?
  numberOfStudents      String?
  ownedById             String?
  EntityHistory         EntityHistory[]
  FormResponse          FormResponse[]
  assignedUser          User?                   @relation("Lead_assignedToToUser", fields: [assignedTo], references: [id])
  ownedBy               User?                   @relation("Lead_ownedByIdToUser", fields: [ownedById], references: [id])
  Stage                 Stage?                  @relation(fields: [stageId], references: [id])
  Note                  Note[]
  Request               Request[]
  webinar_registrations webinar_registrations[]
}

model EntityHistory {
  id          String    @id
  type        String
  fromStage   String?
  toStage     String?
  actionType  String?
  note        String?
  createdAt   DateTime  @default(now())
  leadId      String?
  userId      String?
  disposition String?
  entityType  String    @default("lead")
  customerId  String?
  Customer    Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  Lead        Lead?     @relation(fields: [leadId], references: [id], onDelete: Restrict)
  User        User?     @relation(fields: [userId], references: [id])
}

model Message {
  id              String           @id
  subject         String?
  body            String
  status          MessageStatus    @default(DRAFT)
  senderType      SenderType       @default(USER)
  senderId        String?
  recipient       String
  templateId      String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime
  User            User?            @relation(fields: [senderId], references: [id])
  MessageTemplate MessageTemplate? @relation(fields: [templateId], references: [id])
}

model MessageTemplate {
  id                     String     @id
  name                   String
  subject                String?
  emailHtml              String?
  emailImages            String[]
  emailAttachments       String[]
  whatsappText           String?
  whatsappImages         String[]
  createdById            String
  createdAt              DateTime   @default(now())
  updatedAt              DateTime
  emailDesign            Json?
  Message                Message[]
  User                   User       @relation(fields: [createdById], references: [id])
  Stage                  Stage[]
  WebinarDefaultTemplate webinars[] @relation("WebinarDefaultTemplate")
}

model Note {
  id         String    @id
  content    String
  createdAt  DateTime  @default(now())
  leadId     String?
  userId     String?
  entityType String    @default("lead")
  customerId String?
  Customer   Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  Lead       Lead?     @relation(fields: [leadId], references: [id], onDelete: Restrict)
  User       User?     @relation(fields: [userId], references: [id])
}

model Request {
  id          String      @id
  type        RequestType
  leadId      String
  requestedAt DateTime    @default(now())
  details     Json?
  Lead        Lead        @relation(fields: [leadId], references: [id])
}

model Setting {
  key   String @id
  value Json?
}

model Stage {
  id                String           @id
  name              String           @unique
  order             Int
  color             String?
  defaultTemplateId String?
  Form              Form[]
  Lead              Lead[]
  MessageTemplate   MessageTemplate? @relation(fields: [defaultTemplateId], references: [id])
}

model Subscription {
  id              String    @id
  customerId      String
  planName        String
  startDate       DateTime
  endDate         DateTime?
  studentCount    Int
  discountPercent Int?
  terms           Int       @default(1)
  addons          Json      @default("[]")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime
  Invoice         Invoice[]
  Customer        Customer  @relation(fields: [customerId], references: [id])
}

model User {
  id                             String                  @id
  email                          String                  @unique
  password                       String
  name                           String?
  role                           Role
  createdAt                      DateTime                @default(now())
  updatedAt                      DateTime
  referralCode                   String?                 @unique
  EntityHistory                  EntityHistory[]
  assignedLeads                  Lead[]                  @relation("Lead_assignedToToUser")
  ownedLeads                     Lead[]                  @relation("Lead_ownedByIdToUser")
  Message                        Message[]
  MessageTemplate                MessageTemplate[]
  Note                           Note[]
  assets                         assets[]
  blogs                          blogs[]
  tasks_tasks_assignedToIdToUser tasks[]                 @relation("tasks_assignedToIdToUser")
  tasks_tasks_createdByIdToUser  tasks[]                 @relation("tasks_createdByIdToUser")
  webinar_registrations          webinar_registrations[]
  webinars                       webinars[]
}

model academic_years {
  id        String   @id
  name      String   @unique
  startDate DateTime
  endDate   DateTime
  isCurrent Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime
  terms     terms[]
}

model assets {
  id          String   @id
  title       String
  description String
  files       Json?
  links       Json?
  published   Boolean  @default(false)
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  User        User     @relation(fields: [createdById], references: [id])
}

model blogs {
  id          String    @id
  title       String
  slug        String    @unique
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  category    String?
  featured    Boolean   @default(false)
  keyphrase   String?
  tags        String?
  User        User      @relation(fields: [authorId], references: [id])
}

model tasks {
  id                            String          @id
  title                         String
  description                   String?
  dueDate                       DateTime
  status                        String          @default("pending")
  assignedToId                  String?
  createdById                   String
  subjectType                   TaskSubjectType
  subjectIds                    Json
  createdAt                     DateTime        @default(now())
  updatedAt                     DateTime
  User_tasks_assignedToIdToUser User?           @relation("tasks_assignedToIdToUser", fields: [assignedToId], references: [id])
  User_tasks_createdByIdToUser  User            @relation("tasks_createdByIdToUser", fields: [createdById], references: [id])
}

model terms {
  id             String         @id
  name           String
  academicYearId String
  startDate      DateTime
  endDate        DateTime
  isCurrent      Boolean        @default(false)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  academic_years academic_years @relation(fields: [academicYearId], references: [id])

  @@unique([academicYearId, name])
}

model webinar_registrations {
  id            String   @id
  webinarId     String
  leadId        String
  userId        String?
  registeredAt  DateTime @default(now())
  paymentStatus String?
  attended      Boolean? @default(false)
  Lead          Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  User          User?    @relation(fields: [userId], references: [id])
  webinars      webinars @relation(fields: [webinarId], references: [id], onDelete: Cascade)

  @@unique([webinarId, leadId])
}

model webinars {
  id                       String                  @id
  title                    String
  slug                     String                  @unique
  subtitle                 String?
  description              String?
  coverImage               String?
  dateTime                 DateTime
  durationMinutes          Int?
  platform                 String?
  facilitators             Json?
  isFree                   Boolean                 @default(true)
  price                    Float?
  attendeeLimit            Int?
  registrationOpen         Boolean                 @default(true)
  published                Boolean                 @default(false)
  publishedAt              DateTime?
  createdAt                DateTime                @default(now())
  updatedAt                DateTime
  category                 String?
  tags                     String?
  authorId                 String?
  learningObjectives       Json?
  targetAudience           Json?
  whyAttendReasons         Json?
  whyAttendHighlight       String?
  whyAttendParagraph       String?
  defaultMessageTemplateId String?                 @map("default_message_template_id")
  webinar_registrations    webinar_registrations[]
  User                     User?                   @relation(fields: [authorId], references: [id])
  defaultMessageTemplate   MessageTemplate?        @relation("WebinarDefaultTemplate", fields: [defaultMessageTemplateId], references: [id])
}

enum MessageStatus {
  DRAFT
  SENT
  DELIVERED
  FAILED
}

enum RequestType {
  CALL
  DEMO
  VISIT
}

enum Role {
  ADMIN
  CONTENT_ADMIN
  AGENT
}

enum SenderType {
  USER
  SYSTEM
}

enum TaskSubjectType {
  LEAD
  LEAD_GROUP
  STAGE
  CUSTOMER
}
